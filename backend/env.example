# Flask Application Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
PORT=3000

# Supabase Configuration
SUPABASE_URL=https://your-project-url.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# API Keys
ASSEMBLY_AI_API_KEY=your-assembly-ai-api-key
OPENAI_API_KEY=your-openai-api-key
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Make.com Configuration
# Universal webhook (handles both flows)
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/your-universal-webhook-url



MAKE_WEBHOOK_SECRET=your-webhook-secret

# File Storage Configuration
MAX_FILE_SIZE=524288000
STORAGE_PATH=./backend/storage/videos
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,mkv,wmv,flv,webm

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@yourdomain.com

# Optional: Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
HEALTH_CHECK_ENDPOINT=/health 